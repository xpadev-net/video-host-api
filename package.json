{
  "name": "video-host-api",
  "version": "0.0.21",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "run": "tsx src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check . --write --unsafe",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit --skipLibCheck --pretty --noErrorTruncation --skipDefaultLibCheck --project tsconfig.json",
    "prepare": "lefthook install; pnpm prisma generate || true"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/zod-validator": "^0.7.5",
    "@prisma/client": "6.19.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "hono": "^4.11.1",
    "jsonwebtoken": "^9.0.3",
    "prisma": "^6.19.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@types/node": "^24.10.4",
    "lefthook": "^2.0.12",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "lefthook",
      "prisma"
    ]
  }
}
