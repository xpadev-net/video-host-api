{
  "name": "video-host-api",
  "version": "0.0.15",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "run": "tsx src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check . --write --unsafe",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit --skipLibCheck --pretty --noErrorTruncation --skipDefaultLibCheck --project tsconfig.json",
    "prepare": "lefthook install || true"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.1",
    "@hono/zod-validator": "^0.4.3",
    "@prisma/client": "5.20.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.6.1",
    "hono": "^4.9.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.22.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.19.10",
    "lefthook": "^1.12.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "lefthook",
      "prisma"
    ]
  }
}
