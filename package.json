{
  "name": "video-host-api",
  "version": "0.0.20",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "run": "tsx src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check . --write --unsafe",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit --skipLibCheck --pretty --noErrorTruncation --skipDefaultLibCheck --project tsconfig.json",
    "prepare": "lefthook install; pnpm prisma generate || true"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.1",
    "@hono/zod-validator": "^0.7.0",
    "@prisma/client": "6.17.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.0.0",
    "hono": "^4.10.3",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^22.0.0",
    "lefthook": "^1.12.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "lefthook",
      "prisma"
    ]
  }
}
