{
  "name": "video-host-api",
  "version": "0.0.15",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "run": "tsx src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check . --write --unsafe",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit --skipLibCheck --pretty --noErrorTruncation --skipDefaultLibCheck --project tsconfig.json",
    "prepare": "lefthook install || true"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.2",
    "@hono/zod-validator": "^0.4.1",
    "@prisma/client": "5.20.0",
    "@types/jsonwebtoken": "^9.0.7",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "hono": "^4.6.5",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.20.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.17",
    "lefthook": "^1.12.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  }
}
